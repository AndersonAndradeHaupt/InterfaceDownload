unit Download;

interface

uses
  System.Classes, System.Net.HttpClient, Dowload.interfaces,
  System.Net.URLClient, System.Net.HttpClientComponent;

type
  TDowload = class(TInterfacedObject, iDowload)
  private
    HttpClient: TNetHTTPClient;
  public
    class function New: iDowload;

    constructor Create;
    destructor Destroy; override;
    function Download(const URL, FileName: string): Boolean;
  end;

implementation

constructor TDowload.Create;
begin
  HttpClient := TNetHTTPClient.Create(nil);
end;

destructor TDowload.Destroy;
begin
  HttpClient.Free;
  inherited Destroy;
end;

function TDowload.Download(const URL, FileName: string): Boolean;
var
  HttpResponse: IHTTPResponse;
  FileStream: TFileStream;
begin
  FileStream := TFileStream.Create(FileName, fmCreate);
  try
    HttpResponse := HttpClient.Get(URL, FileStream);
    result := (HttpResponse.StatusCode = 200);
  finally
    FileStream.Free;
  end;
end;

class function TDowload.New: iDowload;
begin
  result := self.Create;
end;

end.
