unit Dowload;


interface

uses
  System.Classes, System.Net.HttpClient, Dowload.interfaces,System.Net.URLClient,
  System.Net.HttpClient, System.Net.HttpClientComponent;

type
  TFileDownloader = class(TInterfacedObject, iDowload)
  public
    procedure Download(const URL, FileName: string);
  end;

implementation



procedure TFileDownloader.Download(const URL, FileName: string);
var
  HttpClient: TNetHTTPClient;
  HttpResponse: IHTTPResponse;
  FileStream: TFileStream;
begin
  HttpClient := TNetHTTPClient.Create(nil);
  try
    FileStream := TFileStream.Create(FileName, fmCreate);
    try
      HttpResponse := HttpClient.Get(URL, FileStream);
      if HttpResponse.StatusCode = 200 then
        WriteLn('Download concluído com sucesso')
      else
        WriteLn('Erro ao baixar o arquivo: ' + HttpResponse.StatusText);
    finally
      FileStream.Free;
    end;
  finally
    HttpClient.Free;
  end;
end;

end.
